%h2 Change your password
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  = f.hidden_field :reset_password_token
  .form-group.row.mb-2
    .col-sm-10
      = f.password_field :password, autofocus: true, autocomplete: 'new-password', class: 'form-control', placeholder: 'New password'
  .form-group.row.mb-2
    .col-sm-10
      = f.password_field :password_confirmation, autofocus: true, autocomplete: 'new-password', class: 'form-control', placeholder: 'Password confirmation'
  .actions
    = f.submit "Change my password", class: 'btn btn-primary'